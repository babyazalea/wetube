extends layouts/main
//- videoBlock mixin을 가져온다
include mixins/videoBlock

block content
    .search__header
        //- videoController에서 보내도록 정의한 검색어(searchingBy) 변수를 사용한다 
        h3 Searching for : #{searchingBy}
    .search__videos
        if videos.length === 0
         h5 No Videos Found
        each item in videos
            //- 더하기 표시로 mixin을 사용할 수 있다
            +videoBlock({
                title:item.title,
                views:item.views,
                videoFile:item.videoFile,
                id:item.id
            })